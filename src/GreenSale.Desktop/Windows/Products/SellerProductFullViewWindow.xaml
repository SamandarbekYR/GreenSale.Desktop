                                   BorderThickness="0"
                                     IsReadOnly="False"
                                     VerticalAlignment="Center"
                                     Background="Transparent"
                                     BorderBrush="Transparent"                                   
                                   FontSize="20"
                                   Margin="0 1 5 0"
                                   Foreground="{DynamicResource FifthTextColor}"
                                   />
                            </StackPanel>
                        </Border>
                        <Border CornerRadius="10"
                        Margin="0 10 10 0"
                        Background="{DynamicResource SixthBackground}">
