                                    Click="btnUpdate_Click"
                                    Style="{DynamicResource ProductUpdateButton}"
                                    Content="Tahrirlash"/>
                            </Border>
                            <Border Grid.Column="1"
                            Margin="-10 0 0 0"
                            Height="55"
                            >
                                <Button x:Name="btnBack"
                                    Click="btnBack_Click"
                                    Style="{DynamicResource ProductBackButton}"
                                    Content="Ortga"/>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
