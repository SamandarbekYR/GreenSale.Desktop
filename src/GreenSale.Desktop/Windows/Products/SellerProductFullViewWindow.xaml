                                        Width="40"
                                        x:Name="br_star_5"
                                        MouseDown="click_star_5"
                                        Margin="2">
                                    <Path  Width="40" Height="40"
                                          x:Name="star_5"
                                          StrokeThickness="1"
                                          Stroke="Yellow"
                                          Margin="0"
                                          Data="{DynamicResource star}"
                                          Stretch="Uniform"
                                          Fill="Transparent"/>
                                </Border>
                            </StackPanel>
                        </Border>

